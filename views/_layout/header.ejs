          </ul>
        </div>
        <!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
       <%- messages('messages', locals) %> 
       <div class="row">

        <% if(categories){ %> 
         <div class="col-xs-12 col-md-3">
           <h3>Categories</h3>
           <ul class="list-group">
             <li class="list-group-item d-flex justify-content-between align-items-center"><a href="/campaigns">All Campaign</a></li>
                <% if(categories != ''){%> <% categories.forEach(function(category, index){ %>
                  <li class="list-group-item d-flex justify-content-between align-items-center"><a href="/campaign/category/<%=category._id%>"><%= category.category %></a>
                  <span class="badge badge-primary badge-pill"><%= category.campaign.length %> </span></li>
                <% }) %> 
              <% } %>
            </ul>
         </div>
         <% } %> 
