<%- include('_layout/header') %> 

<div class="row products">
     <% if(campaign != ''){%>
        <div class="row no-gutters bg-light position-relative">
  <div class="col-md-6 mb-md-0 p-md-4">
    <img src="https://www.madeireiraestrela.com.br/images/joomlart/demo/default.jpg" width="400 px" height="200px" class="w-100" alt="...">
  </div>
  <div class="col-md-6 position-static p-4 pl-md-0">
    <h5 class="mt-0">Title: <%= campaign.title %> </h5>
    <%- campaign.name %>
  </div>
</div>
<br>
    <% } %>
</div>
<a href="/submit_idea/<%= campaign._id %> " class="btn btn-primary">Submit An Idea</a>
<br>
<h2 class="page-title">Ideas</h2>

<div class="row products">
     <% if(ideas != ''){%> <% ideas.forEach(function(idea, index){ %>
        <div class="row no-gutters bg-light position-relative">
  <div class="col-md-6 mb-md-0 p-md-4">
    <img src="/uploads/files-1648550919949.jpg" width="400 px" height="200px" class="w-100" alt="...">
  </div>
  <div class="col-md-6 position-static p-4 pl-md-0">
    <h5 class="mt-0">Title: <%= idea.title %> </h5>
  </div>
  <div class="col-md-6 position-static p-4 pl-md-0">
    <%- idea.content %>
  </div>
  <div class="col-md-6 position-static p-4 pl-md-0">
    View: <%= idea.viewBy.length %> 
    Comment:<%= idea.comments.length %> 
    Like: <%= idea.likeBy.length %> 
    DisLike: <%= idea.dislikeBy.length %> 
  </div>
  <div class="col-md-6 position-static p-4 pl-md-0">
    <a href="/idea_detail/<%= idea._id %> " class="stretched-link">View</a>
  </div>
</div>
<br>
        <% }) %> 
    <% } %>



<%- include('_layout/footer')  %> 

